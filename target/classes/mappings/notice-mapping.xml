<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="NoticeDAO">

	<insert id="insertNotice" >
		INSERT INTO COMMUNITY (COMMU_CAT,COMMU_CAT_NO,COMMU_TITLE,ID,COMMU_CONTENT,COMMU_DATE,COMMU_COUNT) 
		VALUES(#{commu_cat},#{commu_cat_no},#{commu_title},#{id},#{commu_content},NOW(),#{commu_count});
	</insert>
	
	<update id="updateNotice">
	<!-- 컨트롤 시프트 X => 대문자 변환 , Y => 소문자 변환 -->
		UPDATE BOARD SET TITLE =#{title}, WRITER=#{writer}, CONTENT=#{content} WHERE SEQ=#{seq} 
	</update>

	<delete id="deleteNotice">
		DELETE FROM BOARD WHERE SEQ = #{seq}
	</delete>
	
	<select id="getNotice" resultType="community">
		SELECT * FROM BOARD WHERE SEQ=#{seq}
	</select>
	
	<select id="getNoticeList" resultType="community">
	<!--SELECT * FROM BOARD ORDER BY SEQ DESC -->
		SELECT * FROM COMMUNITY WHERE commu_cat = 0
	</select>
	

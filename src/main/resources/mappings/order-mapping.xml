<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDAO">

	<insert id="insertOrder">
		INSERT INTO ORDER_LIST (
		ORD_CODE
		,ID
		,ORD_DATE
		,ORD_STAT
		,PROD_PRICE
		,PROD_P_PRICE
		,ORD_T_PRICE
		,ORD_ADDR
		,ORD_PHONE
		,ORD_MEMO
		,W_NO
		,W_NM_K
		,W_NM_E
		,MERCHANT_UID
		)VALUES(
		#{ord_code}
		,#{id}
		,#{ord_date}
		,#{ord_stat}
		,#{prod_price}
		,#{prod_p_price}
		,#{ord_t_price}
		,#{ord_addr}
		,#{ord_phone}
		,#{ord_memo}
		,#{w_no}
		,#{w_nm_k}
		,#{w_nm_e}
		,#{merchant_uid}
		)
	</insert>
	
<!--구독 배송비 0 -->
		<insert  id="subscribeOrder">
	INSERT INTO ORDER_LIST (
		ORD_CODE
		,ID
		,ORD_DATE
		,ORD_STAT
		,PROD_PRICE
		,PROD_P_PRICE
		,DELI_PRICE
		,ORD_T_PRICE
		,ORD_ADDR
		,ORD_PHONE
		,ORD_MEMO
		,W_NO
		,W_NM_K
		,W_NM_E
		,MERCHANT_UID
		,ORD_DELETE
		)VALUES(
		#{ord_code}
		,#{id}
		,#{ord_date}
		,#{ord_stat}
		,#{prod_price}
		,#{prod_p_price}
		,0
		,#{ord_t_price}
		,#{ord_addr}
		,#{ord_phone}
		,#{ord_memo}
		,#{w_no}
		,#{w_nm_k}
		,#{w_nm_e}
		,#{merchant_uid}
		,-1
		)
			</insert>
	<select id = "selectOrderList" resultType="myorder">
	SELECT * FROM ORDER_LIST
	WHERE ID = #{id} and ORD_DELETE = 0
	</select>
<!-- 구독 리스트 를 위한 확인 -->
		<select id = "subscribeOrderList" resultType="myorder">
	SELECT * FROM ORDER_LIST
	WHERE ID = #{id} AND W_NM_E = '구독' and ORD_DELETE = -1
	</select>
	
	<select id = "selectOrder" resultType="myorder">
	SELECT * FROM ORDER_LIST
	WHERE ID = #{id} and ORD_DELETE = 0
	</select>
	<update id="cancleOrder">
	UPDATE ORDER_LIST
	SET ORD_STAT = '취소',
	CS_STAT = '취소'
	WHERE id = #{id} and ORD_CODE = #{ord_code} 
	</update>
	
	<delete id="deleteOrder">
	DELETE FROM ORDER_LIST
	WHERE id = #{id} and ORD_CODE = #{ord_code}
	</delete>
	<delete id="deleteOrderList">
	UPDATE ORDER_LIST
	SET ORD_DELETE = 1
	WHERE id = #{id} and ORD_CODE = #{ord_code} 
	</delete>
<select id = "OrderListAd" resultType="order">
	SELECT * FROM ORDER_LIST
	</select>
</mapper>

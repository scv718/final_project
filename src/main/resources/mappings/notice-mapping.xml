<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="NoticeDAO">

	<insert id="insertNotice_post" >
		INSERT INTO COMMUNITY (COMMU_CAT,COMMU_CAT_NO,COMMU_TITLE,ID,COMMU_CONTENT,COMMU_DATE,COMMU_COUNT) 
		VALUES(#{commu_cat},#{commu_cat_no},#{commu_title},#{id},#{commu_content},NOW(),#{commu_count})
	</insert>
	
	<update id="updateNotice">
	UPDATE community SET commu_title=#{commu_title}, id=#{id}, commu_content=#{commu_content}, commu_date=NOW() where commu_no=#{commu_no}
	</update>
	
	<update id="viewCount">
	UPDATE community SET commu_count=(#{commu_count}+1) where commu_no=#{commu_no}
	</update>

	<delete id="deleteNotice">
		DELETE FROM COMMUNITY WHERE commu_no = #{commu_no}
	</delete>
	
	<select id="getNotice" resultType="community">
		SELECT * FROM COMMUNITY WHERE commu_no = #{commu_no}
	</select>
	
	<select id="getNoticeList" resultType="community">
	<!--SELECT * FROM BOARD ORDER BY SEQ DESC -->
		SELECT * FROM COMMUNITY WHERE commu_cat = 0
	</select>
	
